<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- app bar color -->
        <item name="colorPrimary">@color/my_primary</item>
        <!-- toggle states, FAB, chips -->
        <item name="colorSecondary">@color/my_secondary</item>
        <!-- custom illustrations, info messages -->
        <item name="colorTertiary">@color/my_tertiary</item>
        <!-- background color -->
        <item name="android:colorBackground">@color/my_background</item>
    </style>

    <color name="my_primary">@color/blue</color>
    <color name="my_primary_dark">@color/violet</color>
    <color name="my_secondary">@color/green</color>
    <color name="my_secondary_dark">@color/blue</color>
    <color name="my_tertiary">@color/yellow</color>
    <color name="my_tertiary_dark">@color/orange</color>
    <color name="my_background">@color/base3</color>
    <color name="my_background_dark">@color/base03</color>
</resources>
