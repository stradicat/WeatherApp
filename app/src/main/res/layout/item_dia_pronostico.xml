<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base2"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="14dp">

    <ImageView
        android:id="@+id/ivIconoClima"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Icono Clima"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/lexend"
        android:text="Fecha"
        android:textColor="@color/base00"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/ivIconoClima"
        app:layout_constraintTop_toTopOf="@+id/ivIconoClima" />

    <TextView
        android:id="@+id/tvDescripcionPronostico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/lexend_light"
        android:text="Descripción"
        android:textColor="@color/base00"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivIconoClima"
        app:layout_constraintEnd_toStartOf="@+id/tvTemperaturaPronostico"
        app:layout_constraintStart_toEndOf="@id/ivIconoClima" />

    <TextView
        android:id="@+id/tvTemperaturaPronostico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/lexend_bold"
        android:text="25°C"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvDescripcionPronostico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvDescripcionPronostico"
        app:layout_constraintTop_toTopOf="@+id/tvDescripcionPronostico" />

</androidx.constraintlayout.widget.ConstraintLayout>
